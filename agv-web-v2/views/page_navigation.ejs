    async function open_waypoint() {
      let map_name = document.querySelector('#map_name').value.trim()
      let is_new = false;
      if (map_name.trim() == "") {
        alert_error("กรุณาเลือกเเผนที่");
        return
      }

      axios.get(`/navigation_config?mode=open&map_name=${map_name}`)
        .then(response => {
          if (response.data == 'OK') {
            alert_fire('ระบบกำลังเปิดใช้งาน')
            setTimeout(() => {
              location.reload();
            }, 1500);
          }
        })
        .catch(error => {
          console.log(error);
          alert_error('Error')
        });
    }

  </script>



