    <script>
      function run_plan(plan) {
        plan_name = plan || ''
        axios.get(`/navigation_config?mode=run_plan&plan_name=${plan_name}`)
          .then(response => {
            if (response.data == 'OK') {
              location.reload();
            } else {
              alert_error('Error')
            }
          })
          .catch(error => {
            console.log(error);
            alert_error('Error')
          });
      }
      function close_map() {
        clear_marker();
        axios.get(`/navigation_config?mode=close`)
          .then(response => {
            if (response.data == 'OK') {
              alert_fire('ปิดระบบเรียบร้อยเเล้ว')
              setTimeout(() => {
                location.reload();
              }, 1500);
            } else {
              alert_error('Error')
            }
          })
          .catch(error => {
            console.log(error);
            alert_error('Error')
          });
      }


      
