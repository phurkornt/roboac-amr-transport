    async function init_marker() {
        let plan_waypoint = JSON.parse('<%-JSON.stringify(plan_waypoint)%>')
        console.log("My-test", plan_waypoint);
        for (let i of plan_waypoint.chargepoint) {
            send_topic({
                mode: "insert",
